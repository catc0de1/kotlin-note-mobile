<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">

  <!-- App Info -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Karna Notes"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="#000"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Simple • Fast • Offline"
    android:textColor="#666"
    android:layout_marginBottom="12dp"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="A simple offline note application designed for efficient table-based note management."
    android:textColor="#444"/>

  <!-- Divider -->
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#DDDDDD"
    android:layout_marginVertical="16dp"/>

  <!-- App Info -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Developed by"
    android:textStyle="bold"
    android:textColor="#000"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="catcode"
    android:textColor="#444"
    android:layout_marginBottom="8dp"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Built with"
    android:textStyle="bold"
    android:textColor="#000"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Kotlin • Android SDK • Room (SQLite)"
    android:textColor="#444"/>

  <!-- Divider -->
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#DDDDDD"
    android:layout_marginVertical="16dp"/>

  <!-- Technical Info -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Version: 1.0.0 (proto)"
    android:textColor="#444"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Release: Feb 2026"
    android:textColor="#444"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Storage: Local (Offline)"
    android:textColor="#444"/>

  <!-- Divider -->
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#DDDDDD"
    android:layout_marginVertical="16dp"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="© 2026 catcode. All rights reserved."
    android:textColor="#444"/>

  <!-- Spacer -->
  <View
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_weight="1"/>

  <!-- Danger Zone -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Danger Zone"
    android:textStyle="bold"
    android:textColor="#B00020"/>

  <Button
    android:id="@+id/btnResetData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Reset All Data"
    android:backgroundTint="#B00020"
    android:textColor="@android:color/white"
    android:layout_marginTop="8dp"/>

</LinearLayout>
